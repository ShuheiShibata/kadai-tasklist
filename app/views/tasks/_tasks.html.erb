<ul class="media-list">
  <% tasks.each do |tasklist| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(tasklist.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to tasklist.user.name, user_path(tasklist.user) %> <span class="text-muted">posted at<%= tasklist.created_at %></span>
        </div>
        <div>
          <p><%= tasklist.content %></p>
          <p><%= tasklist.status %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>